# MCP Configuration
# Copy this file to .vscode/mcp.json and replace ${VAR} placeholders with actual values

# Discord Integration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here  
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# GitHub Integration
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_personal_access_token_here

# System Monitoring Configuration
PYTHONPATH=/home/bao/mcp_use:/home/bao/mcp_use/mcp_servers
WATCH_PATHS=/home,/var/log,/etc
MONITOR_INTERFACES=eth0,wlan0
LOG_PATHS=/var/log/syslog,/var/log/auth.log,/var/log/apache2
MONITOR_PROCESSES=apache2,nginx,mysql,redis
